doctype html
head
  title FlipAnim | Home
  link(rel='stylesheet', href='../css/stylesheet.css')
  link(rel='preconnect', href='https://fonts.googleapis.com')
  link(rel='preconnect', href='https://fonts.gstatic.com', crossorigin='')
  link(href='https://fonts.googleapis.com/css2?family=Indie+Flower&family=Public+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap', rel='stylesheet')
nav
  div(style='display:flex')
    h1
      img(src='../imgs/flipanimv2.png', height='35px', style='vertical-align: bottom;margin-right:5px;')
    a.linktitle Browse
    a.linktitle Search
    a.linktitle Followed
  .profile
    img(onclick="document.querySelector('.profile-options').classList.toggle('open')", src='/imgs/profile.png')
main
  #profile-main.main
    .profile-basic-info
      .profile-image.skeleton(style='background:url(/imgs/profile.png)')
      h1.profile-name.skeleton Loading
      p.profile-creation.skeleton Loading
      .flex
        .profile-follow.ers.skeleton Loading
        .profile-follow.ing.skeleton Loading
    .profile-status-info
      h2 Status
      .text-box.profile-status.skeleton
        span.profile-status-type
      br
      h2 Bio
      .text-box.skeleton.profile-bio No bio
  br 
  hr
  h1 Anims
  .profile-anims
.profile-options
  p(disabled='', style='pointer-events:none;padding-bottom:3px;opacity:0.5;margin:5px;border-bottom: 1px solid rgba(255,255,255),0.5')
    | Logged in as 
    span @FlipAnim
  #profileLink.profile-option Profile
  .profile-option Settings
  #logOut.profile-option Log out
script(src='../index.js')
script(src='profile.js')
