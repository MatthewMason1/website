mixin usersetting(name,id,value)
    br
    p= name 
    input(type='text', name=id, id=id, placeholder=value ? value : 'No '+name, value=value)
html
    include ../../components/head
body
    include ../../components/nav
    main 
        .main.create
            h1(style="color:red") Page not functional (yet)
            h1 Settings for @#{loggedIn.name.text}
            br
            div.create 
                +usersetting('Display Name', 'displayName', loggedIn.name.display)
                +usersetting('Bio','bio',loggedIn.bio)
                br
                p Theme
                div.flex
                    input.theme-setting.dark(type="radio" name="theme")
                    input.theme-setting.classic(type="radio" name="theme")
                br
                p Danger zone
                button#changePass Change Password
                .h-captcha(data-sitekey='aa5d6fa4-a22e-4f29-812f-09d146df8c43')
                script(src='https://js.hcaptcha.com/1/api.js', async='', defer='')
                .flex 
                    button(style="width: 100%" onclick="window.history.go(-1)") Cancel
                    input#subm(type='submit', value='Save')
script.
    var loggedIn = loggedIn
script(src="/views/settings/settings.js")
script(src="/views/index.js") 
